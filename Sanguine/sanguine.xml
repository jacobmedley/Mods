<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<GameInfo>
	<!-- Keep the 100% discovery chance for barbarian camps -->
	<SecretSocieties>
        <Update>
            <Where SecretSocietyType="SECRETSOCIETY_SANGUINE_PACT" />
            <Set DiscoverAtBarbarianCampBaseChance="100" />
        </Update>
	</SecretSocieties>
	
	<!-- Keep universal XP gain for all vampires -->
	<Units>
        <Update>
            <Where UnitType="UNIT_VAMPIRE" />
            <Set CanEarnExperience="true" />
        </Update>
	</Units>
	
	<!-- Requirements to check if player is human -->
	<Requirements>
		<Row RequirementId="REQUIREMENT_PLAYER_IS_HUMAN_VAMPIRE" RequirementType="REQUIREMENT_PLAYER_IS_HUMAN"/>
	</Requirements>
	
	<RequirementSets>
		<Row RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE" RequirementSetType="REQUIREMENTSET_TEST_ALL"/>
	</RequirementSets>
	
	<RequirementSetRequirements>
		<Row RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE" RequirementId="REQUIREMENT_PLAYER_IS_HUMAN_VAMPIRE"/>
	</RequirementSetRequirements>
	
	<!-- Modifiers for human players only -->
	<Modifiers>
		<Row ModifierId="VAMPIRE_HUMAN_MOVEMENT_BONUS" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_MOVEMENT"/>
		<Row ModifierId="VAMPIRE_HUMAN_SIGHT_BONUS" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_SIGHT_RANGE"/>
		<Row ModifierId="VAMPIRE_HUMAN_IMMORTAL_PROMOTION" ModifierType="MODIFIER_PLAYER_UNITS_GRANT_PROMOTION"/>
		<Row ModifierId="VAMPIRE_HUMAN_COMBAT_BONUS" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_COMBAT_STRENGTH"/>
		<Row ModifierId="VAMPIRE_HUMAN_HEAL_ON_KILL" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_HEAL_PER_TURN"/>
		<Row ModifierId="VAMPIRE_HUMAN_XP_BONUS" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_XP_BONUS"/>
		<Row ModifierId="VAMPIRE_HUMAN_FEAR_AURA" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_ADJACENT_ENEMY_COMBAT_STRENGTH"/>
		<Row ModifierId="VAMPIRE_HUMAN_IGNORE_ZOC" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_IGNORE_ZOC"/>
		<Row ModifierId="VAMPIRE_HUMAN_FLANKING_BONUS" ModifierType="MODIFIER_PLAYER_UNITS_ADJUST_FLANKING_BONUS"/>
	</Modifiers>
	
	<ModifierArguments>
		<Row ModifierId="VAMPIRE_HUMAN_MOVEMENT_BONUS" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_MOVEMENT_BONUS" Name="Amount" Value="6"/>
		<Row ModifierId="VAMPIRE_HUMAN_SIGHT_BONUS" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_SIGHT_BONUS" Name="Amount" Value="4"/>
		<Row ModifierId="VAMPIRE_HUMAN_IMMORTAL_PROMOTION" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_IMMORTAL_PROMOTION" Name="PromotionType" Value="PROMOTION_VAMPIRE_IMMORTAL"/>
		<Row ModifierId="VAMPIRE_HUMAN_COMBAT_BONUS" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_COMBAT_BONUS" Name="Amount" Value="25"/>
		<Row ModifierId="VAMPIRE_HUMAN_HEAL_ON_KILL" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_HEAL_ON_KILL" Name="Amount" Value="50"/>
		<Row ModifierId="VAMPIRE_HUMAN_XP_BONUS" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_XP_BONUS" Name="Amount" Value="100"/>
		<Row ModifierId="VAMPIRE_HUMAN_FEAR_AURA" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_FEAR_AURA" Name="Amount" Value="-15"/>
		<Row ModifierId="VAMPIRE_HUMAN_IGNORE_ZOC" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_IGNORE_ZOC" Name="Amount" Value="1"/>
		<Row ModifierId="VAMPIRE_HUMAN_FLANKING_BONUS" Name="UnitType" Value="UNIT_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_FLANKING_BONUS" Name="Amount" Value="10"/>
	</ModifierArguments>
	
	<!-- Attach modifiers to human players only -->
	<TraitModifiers>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_MOVEMENT_BONUS"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_SIGHT_BONUS"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_IMMORTAL_PROMOTION"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_COMBAT_BONUS"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_HEAL_ON_KILL"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_XP_BONUS"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_FEAR_AURA"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_IGNORE_ZOC"/>
		<Row TraitType="TRAIT_LEADER_MAJOR_CIV" ModifierId="VAMPIRE_HUMAN_FLANKING_BONUS"/>
	</TraitModifiers>
	
	<ModifierRequirements>
		<Row ModifierId="VAMPIRE_HUMAN_MOVEMENT_BONUS" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_SIGHT_BONUS" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_IMMORTAL_PROMOTION" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_COMBAT_BONUS" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_HEAL_ON_KILL" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_XP_BONUS" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_FEAR_AURA" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_IGNORE_ZOC" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
		<Row ModifierId="VAMPIRE_HUMAN_FLANKING_BONUS" RequirementSetId="REQUIREMENTSET_PLAYER_IS_HUMAN_VAMPIRE"/>
	</ModifierRequirements>
</GameInfo>